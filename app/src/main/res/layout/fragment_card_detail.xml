<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_card_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.a21753725a.magiccardlist.card_detailFragment"
    tools:showIn="@layout/activity_card_detail">

    <ImageView
        android:layout_width="167dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/imCard"
        android:layout_height="233dp"
        android:layout_marginStart="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvText"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/imCard"
        android:layout_marginStart="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="24dp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvRarity"
        android:layout_marginStart="24dp"
        app:layout_constraintLeft_toRightOf="@+id/imCard"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/tvType" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvStr"
        android:layout_marginStart="24dp"
        app:layout_constraintLeft_toRightOf="@+id/imCard"
        android:layout_marginLeft="24dp"
        app:layout_constraintTop_toBottomOf="@+id/tvColor"
        android:layout_marginTop="14dp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvColor"
        android:layout_marginStart="24dp"
        app:layout_constraintLeft_toRightOf="@+id/imCard"
        android:layout_marginLeft="24dp"
        app:layout_constraintTop_toTopOf="@+id/tvRarity"
        android:layout_marginTop="110dp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvType"
        android:layout_marginStart="24dp"
        app:layout_constraintLeft_toRightOf="@+id/imCard"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/tvName" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvName"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="24dp"
        app:layout_constraintLeft_toRightOf="@+id/imCard"
        android:layout_marginLeft="24dp" />
</android.support.constraint.ConstraintLayout>
